<script>
	canvas = $('#main-canvas').get(0);
	log = $('#log-wrapper');
	trigger = $('.log-trigger').get(0);

	var ctx = canvas.getContext('2d');
	_canvas = $(canvas);

	function calcSize(){
		boardSize = Math.round((_canvas.height() < _canvas.width()) ? _canvas.height() / 2 : _canvas.width() / 2);
		boardMinX = Math.round((_canvas.width() - boardSize) / 2);
		boardMaxX = boardMinX + boardSize;
		boardMinY = Math.round((_canvas.height() - boardSize) / 2);
		boardMaxY = boardMinY + boardSize;

		canvas.width = _canvas.width();
		canvas.height = _canvas.height();
	}

	calcSize();
	$(window).on('resize', calcSize);
</script>
