<!DOCTYPE html>
<html lang="<%= global.config.lang %>">
	<head>
		<%- include('./header', {title: global.translator('me.title')}); %>
	</head>

	<body>
		<% include ./navigation %>
		<% include ./background %>

		<section class="main-section">
			<h2>
				<%= user.getName() %>
				<% if(user.github !== ""){ %>
					<a href="https://github.com/<%= user.github %>"><i class="fa fa-github"></i></a>
				<% } %>
			</h2>

			<a class="btn" href="/me/update"><i class="fa fa-pencil"></i><%= global.translator('update.title') %></a>

			<%- include('./user/bot-list', {
				title: global.translator('me.bots'),
				bots: user.bots
			}); %>
		</section>

		<% include ./footer %>
	</body>
</html>
