<!DOCTYPE html>
<html lang="<%= global.config['lang'] %>">
	<head prefix="og: http://ogp.me/ns#">
		<%- include('./header', {title: global.translator('build.title')}) %>

		<script src="/ace/ace.js"></script>
	</head>

	<body>
		<form>
			<div class="row">
				<div class="input-field col s12">
					<label for="id"><%= global.translator('build.id') %></label>
					<input id="id" name="id" type="text">
				</div>
			</div>

			<div class="row">
				<div class="input-field col s12">
					<label for="skin"><%= global.translator('build.skin') %></label>
					<select>
						<% skins.forEach((v) => { %>
							<option value="<%= v %>">
								<img src="/resources/image/skins/<%= v %>.svg"><%= v %>
							</option>
						<% }); %>
					</select>
				</div>
			</div>

			<div id="code-editor">

			</div>

			<textarea id="code" name="code" style="display: none"></textarea>
		</form>

		<script>
			var codeArea = $('#code');
			var editor = ace.edit('code-editor');
			editor.setTheme('ace/theme/monokai');
			editor.getSession().setMode('ace/mode/javascript');
			editor.getSession().on('change', function(){
				codeArea.val(editor.getSession().getValue());
			});
		</script>
	</body>
</html>
